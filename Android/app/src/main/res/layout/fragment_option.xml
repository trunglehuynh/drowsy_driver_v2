<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@android:color/white"
    android:paddingHorizontal="20dp"
    >
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/menuBtn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_menu_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Option"
        android:textColor="@color/textMainColor"
        android:textSize="@dimen/textTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound:"
            android:textColor="@color/textMainColor"
            android:textSize="@dimen/textMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical= "20dp"/>
<!--        <androidx.appcompat.widget.AppCompatSpinner-->
<!--            android:id="@+id/spinnerSoundSelection"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            android:entries="@array/sound_arrays"-->
<!--            android:prompt="@string/sound_prompt"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />-->

<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:id="@+id/volumeTV"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Volume:"-->
<!--            android:textColor="@color/textMainColor"-->
<!--            android:textSize="@dimen/textMain"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/spinnerSoundSelection" />-->

<!--        <androidx.appcompat.widget.AppCompatSeekBar-->
<!--            android:id="@+id/seekBarVolume"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/volumeTV" />-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sensitiveTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensitive:"
            android:textColor="@color/textMainColor"
            android:textSize="@dimen/textMain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appCompatTextView" />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBarSensitive"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/sensitiveTV"/>
        <ImageView
            android:id="@+id/learnMoreIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_info_outline_24"
            android:contentDescription="@string/learn_more"
            android:layout_marginLeft="10dp"
            app:tint="@color/textLink"
            app:layout_constraintLeft_toRightOf="@id/sensitiveTV"
            app:layout_constraintBottom_toBottomOf="@id/sensitiveTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/durationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:textColor="@color/textMainColor"
            android:textSize="@dimen/textMain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBarSensitive" />
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seek_bar_duration"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/durationTV"/>
        <ImageView
            android:id="@+id/durationLearnMoreIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_info_outline_24"
            android:contentDescription="@string/learn_more"
            android:layout_marginLeft="10dp"
            app:tint="@color/textLink"
            app:layout_constraintLeft_toRightOf="@id/durationTV"
            app:layout_constraintBottom_toBottomOf="@id/durationTV" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emptyAlertTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Face Detected Alert:"
            android:textColor="@color/textMainColor"
            android:textSize="@dimen/textMain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seek_bar_duration" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/emptyFaceAlertSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seek_bar_duration"/>


        <ImageView
            android:id="@+id/emptyFaceAlertLearnMoreIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/baseline_info_outline_24"
            android:contentDescription="@string/learn_more"
            app:tint="@color/textLink"
            app:layout_constraintBottom_toBottomOf="@+id/emptyAlertTV"
            app:layout_constraintLeft_toRightOf="@id/emptyAlertTV" />

         </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resetDefaultBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Reset Default Setting"
        android:layout_marginHorizontal="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:text="Start" />

</LinearLayout>
